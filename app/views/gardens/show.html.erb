<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container mt-5">

  <div class="cards">
    <% @garden.plants.each do |plant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
        <%= plant.name %>
        <%= link_to plant_path(plant), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ml-3 btn btn-danger btn-sm' do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>

</div>


<div class="container mt-5">

  <div class="row justify-content-center">
    <div class="col-4">
      <h3>Add new Plant</h3>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit 'Create Plant', class: 'btn btn-primary btn-block' %>
      <% end %>

    </div>
  </div>

</div>




